{

    "description": "Adds a better Save Image As option.",
    "manifest_version": 2,
    "author": "Joshua Cherry",
    "name": "Save Image As",
    "version": "1.0.15",
    "homepage_url": "https://github.com/tasadar2/FFSaveImageAs",

    "applications": {
        "gecko": {
            "id": "{cc19018e-8d71-4999-9f19-5dfb71ee176a}"
        }
    },

    "permissions": [
        "activeTab",
        "menus",
        "downloads",
        "downloads.open",
        "storage"
    ],

    "background": {
        "scripts": [
            "save-image-as.js"
        ]
    },

    "content_scripts": [{
        "matches": ["https://*/*", "http://*/*"],
        "js": ["get-element.js"]
    }],

    "commands": {
        "advanced-save-image-as": {
            "suggested_key": {
                "default": "Alt+Shift+I"
            }
        }
    },

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true,
        "chrome_style": true
    }

}